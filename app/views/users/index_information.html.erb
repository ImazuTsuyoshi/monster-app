<% provide(:title, 'All Users') %>
<h1>選手情報</h1>
<div class=" align-items-center">
</div>


<div class="col-md-12 ">
  <%= will_paginate %>
  <table class="table table-hover" id="table-users">
    <thead class="thead-light">
      <tr>
        <th class="center"><%= User.human_attribute_name :name %></th>
        <th class="center"><%= User.human_attribute_name :age %></th>
        <th class="center"><%= User.human_attribute_name :gender %></th>
        <th class="center"><%= User.human_attribute_name :phone %></th>
        <th class="center"><%= User.human_attribute_name :residence %></th>
        <th></th>
      </tr>
    </thead>

    <% @users.each do |user| %>
    <tr>
      <td class="center"><%= user.name %></td>
      <td class="center"><%= user.age %></td>
      <td class="center"><%= user.gender %></td>
      <td class="center"><%= user.phone %></td>
      <td class="center"><%= user.residence %></td>
      <td>
        <% if current_user.admin? %>
        <%= link_to "削除", user, method: :delete,
                data: { confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>